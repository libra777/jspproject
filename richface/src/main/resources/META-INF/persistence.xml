<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="richface" transaction-type="RESOURCE_LOCAL">

        <class>edu.sun.richfaces.beans.UserInformation</class>
        <class>edu.sun.richfaces.beans.ProjectInformation</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/crawler"></property>
            <property name="javax.persistence.jdbc.user" value="crawler"></property>
            <property name="javax.persistence.jdbc.password" value="crawler"></property>
        </properties>
    </persistence-unit>
</persistence>